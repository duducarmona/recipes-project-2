<main id="add-update-recipe">

  <h1>{{title}}</h1>

  <form action="/recipes/{{recipe.id}}" method="post">
    <label for="title">Title:</label><br>
    <input type="text" name="title" value="{{recipe.title}}" required><br>

    <label for="image">Image:</label><br>
    <input type="text" name="image" value="{{recipe.image}}"><br>

    <h2>Ingredients</h2>
    <div id="ingredients">
      {{#each recipe.ingredients}}
      <div class="ingredient-container">
        <button class="remove-ingredient" type="button">
          <img src="/images/remove-icon.png" alt="remove icon"/>
        </button>

        <label for="ingredient">Ingredient:</label><br>
        <select name="ingredient" required>
            <option value="">--Please choose an ingredient--</option>
            {{#each ../ingredients}}
              {{#createOption ../this.ingredient._id this._id this.name}}{{/createOption}}
            {{/each}}
        </select><br>

        <label for="amount">Amount (number):</label><br>
        <input type="number" name="amount" step="any" min="0" value="{{this.amount}}"><br>

        <label for="unit">Unit:</label><br>
        <input type="text" name="unit" value="{{this.unit}}"><br>
      </div>
      {{/each}}
    </div>
    <div class="button-container"></div>
      <button class="small-button" type="button" id="add-ingredient">Add Another Ingredient</button>
    </div>

    <h2>Instructions</h2>
    <ol id="steps">
      {{#each recipe.instructions}}
      <li>
        <input class="step" type="text" name="steps" value="{{this.step}}">
        <button class="remove-step" type="button">
          <img src="/images/remove-icon.png" alt="remove icon"/>
        </button>
      </li>
      {{/each}}
    </ol>
    <div class="button-container">
      <button class="small-button" type="button" id="add-step">Add Another Step</button>
    </div>

    <div class="button-container">
      <button class="button" type="submit">Save Recipe</button>
    </div>
  </form>

</main>

{{> add_remove_steps}}
{{> add_remove_ingredients}}
