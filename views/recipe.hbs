<main id="recipe">

  <h1>{{recipe.title}}</h1>

  <form action="recipe/{{this.id}}/update" method="get">
    <input type="image" type="submit" name="update" src="images/type1.jpg" />
  </form>     
  <form action="recipe/{{this.id}}/delete" method="post">
    <input type="image" type="submit" name="delete" src="images/type1.jpg" />
  </form>

  <div class="recipe-card">
    <div class="recipe-image-container">
      <img class="recipe-image" src="{{recipe.image}}" />
    </div>
    <div>
      <span><strong>Ingredients</strong></span>
      <div class="ingredient-list">
        {{#each recipe.ingredients}}
        {{this.ingredient.name}}
        {{this.amount}}
        {{this.unit}}
        {{/each}}
      </div>
      <span><strong>Preparation steps</strong></span>
      <div class="preparation-steps">
        {{#each recipe.steps}}
        {{this.order}}
        {{this.instructions}}
        {{/each}}
      </div>
    </div>
  </div>
</main>